<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LiveFrament">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:layout_margin="20dp"
            android:src="@drawable/livestream"
            >

        </ImageView>
        <RelativeLayout
            android:id="@+id/startcall_call"
        android:layout_marginTop="20dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <com.owater.library.CircleTextView
                android:layout_width="250dp"
                android:layout_height="130dp"
                app:ct_backgroundColor="@color/newColor"
                app:ct_border_width="10dp"
                app:ct_border_color="@color/newColor"
                app:ct_border_alpha="0.5"
                app:ct_type="shadow_alpha"
                android:id="@+id/cir"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:text="Start Live"/>
        </RelativeLayout>
    </RelativeLayout>
        //endcall
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/endcall_button"
            android:layout_marginTop="20dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.owater.library.CircleTextView
                    android:layout_width="250dp"
                    android:layout_height="130dp"
                    app:ct_backgroundColor="@color/red_connectify"
                    app:ct_border_width="10dp"
                    app:ct_border_color="@color/red_connectify"
                    app:ct_border_alpha="0.5"
                    app:ct_type="shadow_alpha"
                    android:id="@+id/endcall"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textSize="16sp"
                    android:layout_marginTop="20dp"
                    android:text="End Live"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>


</ScrollView>