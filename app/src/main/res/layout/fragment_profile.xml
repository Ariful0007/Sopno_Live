<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
          <LinearLayout
              android:orientation="vertical"
              android:id="@+id/layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


          <LinearLayout
              android:id="@+id/linearLayout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:padding="4dp"
              app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@+id/relativeLayout">

          <androidx.cardview.widget.CardView
              android:id="@+id/dailyCheckCard"
              android:layout_width="0dp"
              android:layout_height="230dp"
              android:layout_weight="1"
              app:cardBackgroundColor="#2c3e50"
              app:cardUseCompatPadding="true"
              app:cardElevation="4dp"
              app:cardCornerRadius="10dp"
              android:layout_marginLeft="0dp"
              android:clickable="true"
              android:foreground="?attr/selectableItemBackground"
              >

              <RelativeLayout

                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

                  <de.hdodenhof.circleimageview.CircleImageView
                      app:civ_border_color="@color/com6"
                      app:civ_border_width="2dp"
                      android:foregroundTint="@color/white"
                      android:layout_width="100dp"
                      android:id="@+id/image1"
                      android:layout_marginTop="20dp"
                      android:layout_alignParentRight="false"
                      android:layout_height="100dp"
                      android:layout_centerHorizontal="true"
                      android:layout_centerInParent="false"
                      android:src="@drawable/ic_person" />

<LinearLayout
    android:id="@+id/ddd"
    android:layout_below="@id/image1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/name"
        android:layout_below="@id/image1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="false"


        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="17dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="@font/open_sans_bold"
        android:text="Home"
        android:gravity="center_horizontal" />
    <TextView
        android:layout_below="@id/image1"
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="false"

        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:fontFamily="@font/open_sans_bold"
        android:text="Home"
        android:gravity="center_horizontal" />
</LinearLayout>
                  <LinearLayout
                      android:layout_marginTop="10dp"
                      android:layout_marginRight="50dp"
                      android:layout_marginLeft="50dp"
                      android:layout_centerHorizontal="true"
                      android:layout_centerInParent="true"
                      android:layout_below="@id/ddd"
                      android:orientation="horizontal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      >
                      <TextView

                          android:id="@+id/coinsTf1v"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:layout_alignParentEnd="true"
                          android:layout_alignParentRight="true"
                          android:backgroundTint="@color/white"
                          android:drawableStart="@drawable/diamond"
                          android:drawableLeft="@drawable/diamond"
                          android:drawablePadding="12dp"
                          android:gravity="center_vertical"

                          android:textColor="#fff"
                          android:textSize="18sp"
                          android:textStyle="bold" />
                      <TextView
                          android:id="@+id/coinsT1v"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:layout_alignParentEnd="true"
                          android:layout_alignParentRight="true"
                          android:layout_marginEnd="12dp"
                          android:layout_marginRight="12dp"
                          android:drawablePadding="12dp"
                          android:gravity="center_vertical"

                          android:textColor="#fff"
                          android:text="0000"
                          android:textSize="18sp"
                          android:textStyle="bold" />
                      <TextView
                          android:id="@+id/coinsTf1v1"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:layout_alignParentEnd="true"
                          android:layout_alignParentRight="true"
                          android:drawableStart="@drawable/icmy"
                          android:drawableLeft="@drawable/icmy"
                          android:drawablePadding="12dp"
                          android:gravity="center_vertical"

                          android:textColor="#fff"
                          android:textSize="18sp"
                          android:textStyle="bold" />
                      <TextView
                          android:id="@+id/coinsT1v1"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:layout_alignParentEnd="true"
                          android:layout_alignParentRight="true"
                          android:layout_marginEnd="12dp"
                          android:layout_marginRight="12dp"
                          android:drawablePadding="12dp"
                          android:gravity="center_vertical"

                          android:textColor="#fff"
                          android:text="0000"
                          android:textSize="18sp"
                          android:textStyle="bold" />
                  </LinearLayout>


              </RelativeLayout>

          </androidx.cardview.widget.CardView>
          </LinearLayout>
              <TextView
                  android:layout_below="@id/image1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_centerInParent="false"

                  android:layout_marginTop="0dp"
                  android:layout_marginRight="30dp"
                  android:layout_marginLeft="30dp"

                  android:textSize="15dp"
                  android:textAllCaps="true"
                  android:textAlignment="textStart"
                  android:textColor="#756F6F"
                  android:fontFamily="@font/open_sans_bold"
                  android:text="Account"
                  android:gravity="center_horizontal" />
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  >
                  <androidx.cardview.widget.CardView
                      android:id="@+id/v"
                      android:layout_width="0dp"
                      android:layout_height="170dp"
                      android:layout_weight="1"
                      app:cardBackgroundColor="#fff"
                      app:cardUseCompatPadding="true"
                      app:cardElevation="4dp"
                      app:cardCornerRadius="10dp"
                      android:layout_marginLeft="0dp"
                      android:clickable="true"
                      android:foreground="?attr/selectableItemBackground"
                      >
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          >
                          <LinearLayout
                              android:id="@+id/edit_profile"
                              android:orientation="horizontal"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingTop="10dp"
                              android:paddingBottom="10dp"
                              android:paddingLeft="20dp"
                              android:paddingRight="20dp">

                              <ImageView
                                  android:layout_gravity="center"
                                  android:layout_width="30dp"
                                  android:layout_height="30dp"
                                  android:src="@drawable/icmy"/>

                              <TextView
                                  android:drawableRight="@drawable/ic_key"
                                  android:id="@+id/emailview"
                                  android:textSize="15dp"
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:gravity="center_vertical"
                                  android:paddingLeft="10dp"
                                  style="@style/fonts"
                                  android:text="Edit Profile"
                                  android:textColor="#756F6F"/>


                          </LinearLayout>
                          //
                          <LinearLayout
                              android:id="@+id/withdraw"
                              android:orientation="horizontal"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingTop="10dp"
                              android:paddingBottom="10dp"
                              android:paddingLeft="20dp"
                              android:paddingRight="20dp">

                              <ImageView
                                  android:layout_gravity="center"
                                  android:layout_width="30dp"
                                  android:layout_height="30dp"
                                  android:src="@drawable/ic_baseline_attach_money_24"/>

                              <TextView
                                  android:drawableRight="@drawable/ic_key"
                                  android:textSize="15dp"
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:gravity="center_vertical"
                                  android:paddingLeft="10dp"
                                  style="@style/fonts"
                                  android:text="Withdraw"
                                  android:textColor="#756F6F"/>


                          </LinearLayout>
                          //
                          <LinearLayout
                              android:id="@+id/deletee"
                              android:orientation="horizontal"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingTop="10dp"
                              android:paddingBottom="10dp"
                              android:paddingLeft="20dp"
                              android:paddingRight="20dp">

                              <ImageView
                                  android:layout_gravity="center"
                                  android:layout_width="30dp"
                                  android:layout_height="30dp"
                                  android:src="@drawable/ic_baseline_delete_outline_24"/>

                              <TextView
                                  android:drawableRight="@drawable/ic_key"
                                  android:textSize="15dp"
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:gravity="center_vertical"
                                  android:paddingLeft="10dp"
                                  style="@style/fonts"
                                  android:text="Delete Account"
                                  android:textColor="#756F6F"/>


                          </LinearLayout>
                      </LinearLayout>

                  </androidx.cardview.widget.CardView>
              </LinearLayout>
              <TextView
                  android:layout_below="@id/image1"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_centerInParent="false"

                  android:layout_marginTop="10dp"
                  android:layout_marginRight="30dp"
                  android:layout_marginLeft="30dp"

                  android:textSize="15dp"
                  android:textAllCaps="true"
                  android:textAlignment="textStart"
                  android:textColor="#756F6F"
                  android:fontFamily="@font/open_sans_bold"
                  android:text="Others"
                  android:gravity="center_horizontal" />
              <LinearLayout
                  android:layout_marginBottom="100dp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  >
                  <androidx.cardview.widget.CardView

                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      app:cardBackgroundColor="#fff"
                      app:cardUseCompatPadding="true"
                      app:cardElevation="4dp"
                      app:cardCornerRadius="10dp"
                      android:layout_marginLeft="0dp"
                      android:clickable="true"
                      android:foreground="?attr/selectableItemBackground"
                      >
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="vertical"
                          >
                          //hellpline
                          <LinearLayout
                              android:orientation="horizontal"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingTop="10dp"
                              android:paddingBottom="10dp"
                              android:paddingLeft="20dp"
                              android:paddingRight="20dp">

                              <ImageView
                                  android:layout_gravity="center"
                                  android:layout_width="30dp"
                                  android:layout_height="30dp"
                                  android:src="@drawable/ic_baseline_contact_support_24"/>

                              <TextView
                                  android:drawableRight="@drawable/ic_key"

                                  android:textSize="15dp"
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:gravity="center_vertical"
                                  android:paddingLeft="10dp"
                                  style="@style/fonts"
                                  android:text="Help Line"
                                  android:textColor="#756F6F"/>


                          </LinearLayout>
                          <LinearLayout
                              android:orientation="horizontal"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingTop="10dp"
                              android:paddingBottom="10dp"
                              android:paddingLeft="20dp"
                              android:paddingRight="20dp">

                              <ImageView
                                  android:layout_gravity="center"
                                  android:layout_width="30dp"
                                  android:layout_height="30dp"
                                  android:src="@drawable/ic_baseline_share_24"/>

                              <TextView
                                  android:drawableRight="@drawable/ic_key"

                                  android:textSize="15dp"
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:gravity="center_vertical"
                                  android:paddingLeft="10dp"
                                  style="@style/fonts"
                                  android:text="Share Apps"
                                  android:textColor="#756F6F"/>


                          </LinearLayout>
                          //
                          <LinearLayout
                              android:orientation="horizontal"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingTop="10dp"
                              android:paddingBottom="10dp"
                              android:paddingLeft="20dp"
                              android:paddingRight="20dp">

                              <ImageView
                                  android:layout_gravity="center"
                                  android:layout_width="30dp"
                                  android:layout_height="30dp"
                                  android:src="@drawable/ic_baseline_help_outline_24"/>

                              <TextView
                                  android:drawableRight="@drawable/ic_key"
                                  android:textSize="15dp"
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:gravity="center_vertical"
                                  android:paddingLeft="10dp"
                                  style="@style/fonts"
                                  android:text="Help and Feedback"
                                  android:textColor="#756F6F"/>


                          </LinearLayout>
                          //
                          <LinearLayout
                              android:orientation="horizontal"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingTop="10dp"
                              android:paddingBottom="10dp"
                              android:paddingLeft="20dp"
                              android:paddingRight="20dp">

                              <ImageView
                                  android:layout_gravity="center"
                                  android:layout_width="30dp"
                                  android:layout_height="30dp"
                                  android:src="@drawable/ic_baseline_policy_24"/>

                              <TextView
                                  android:drawableRight="@drawable/ic_key"
                                  android:textSize="15dp"
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:gravity="center_vertical"
                                  android:paddingLeft="10dp"
                                  style="@style/fonts"
                                  android:text="Privacy Policy"
                                  android:textColor="#756F6F"/>


                          </LinearLayout>
                          //
                          <LinearLayout
                              android:orientation="horizontal"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingTop="10dp"
                              android:paddingBottom="10dp"
                              android:paddingLeft="20dp"
                              android:paddingRight="20dp">

                              <ImageView
                                  android:layout_gravity="center"
                                  android:layout_width="30dp"
                                  android:layout_height="30dp"
                                  android:src="@drawable/ic_baseline_announcement_24"/>

                              <TextView
                                  android:drawableRight="@drawable/ic_key"
                                  android:textSize="15dp"
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:gravity="center_vertical"
                                  android:paddingLeft="10dp"
                                  style="@style/fonts"
                                  android:text="Terms and Conditions"
                                  android:textColor="#756F6F"/>


                          </LinearLayout>
                      </LinearLayout>

                  </androidx.cardview.widget.CardView>
              </LinearLayout>
          </LinearLayout>

      </RelativeLayout>
  </ScrollView>

</RelativeLayout>